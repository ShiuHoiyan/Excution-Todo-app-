<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.wangyunwen.finallab.ItemDetails"
    android:id="@+id/beizhu_root">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_goback"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="做作业"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:textColor="@color/darkgrey"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/content"
        android:text="1996 12 32 12:12"
        android:id="@+id/timer"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textColor="@color/cadetblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:hint="备注："
        android:gravity="top|left"
        android:layout_above="@+id/use"
        android:layout_below="@+id/timer"
        android:id="@+id/beizhu"
        android:layout_margin="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/use">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_detail"
            android:layout_margin="10dp"
            android:background="@android:drawable/ic_menu_edit" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_detail"
            android:layout_margin="10dp"
            android:background="@android:drawable/ic_menu_delete" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share"
            android:layout_margin="10dp"
            android:background="@android:drawable/ic_menu_set_as" />
    </LinearLayout>

</RelativeLayout>
